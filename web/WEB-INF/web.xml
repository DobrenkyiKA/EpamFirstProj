<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <welcome-file-list>
        <welcome-file>/view/homePage.jsp</welcome-file>
    </welcome-file-list>
    <!-- add servlet -->
    <servlet>
        <servlet-name>getUserCard</servlet-name>
        <servlet-class>com.epam.app.controller.EntryOfUserServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>getUserCard</servlet-name>
        <url-pattern>/getUserCard</url-pattern>
    </servlet-mapping>

    <!-- entry user to take all his cards servlet -->
    <servlet>
        <servlet-name>entryUser</servlet-name>
        <servlet-class>com.epam.app.controller.EntryOfUserServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>entryUser</servlet-name>
        <url-pattern>/entryUser</url-pattern>
    </servlet-mapping>


    <!-- user cards servlet -->
    <servlet>
        <servlet-name>cards</servlet-name>
        <servlet-class>com.epam.app.controller.UserCardServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>cards</servlet-name>
        <url-pattern>/cards</url-pattern>
    </servlet-mapping>

    <!-- add servlet -->
    <servlet>
        <servlet-name>userList</servlet-name>
        <servlet-class>com.epam.app.controller.UserListController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>userList</servlet-name>
        <url-pattern>/GetUserList</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>add</servlet-name>
        <servlet-class>com.epam.app.controller.AddUserController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>add</servlet-name>
        <url-pattern>/AddNewUser</url-pattern>
    </servlet-mapping>

    <!-- list servlet -->
    <servlet>
        <servlet-name>list</servlet-name>
        <servlet-class>com.epam.app.controller.ListServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>list</servlet-name>
        <url-pattern>/list</url-pattern>
    </servlet-mapping>

    <!-- bookslist servlet -->
    <servlet>
        <servlet-name>bookslist</servlet-name>
        <servlet-class>com.epam.app.controller.BookListController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>bookslist</servlet-name>
        <url-pattern>/BookListView</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>register</servlet-name>
        <servlet-class>com.epam.app.controller.RegisterUserController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>authorization</servlet-name>
        <servlet-class>com.epam.app.controller.AuthorizationUserController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>authorization</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>


    <!-- home servlet -->
    <servlet>
        <servlet-name>homePage</servlet-name>
        <servlet-class>com.epam.app.controller.HomePageController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>homePage</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>loginFilter</filter-name>
        <filter-class>com.epam.app.filter.SecurityFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>loginFilter</filter-name>
        <url-pattern>/filter</url-pattern>
    </filter-mapping>

</web-app>