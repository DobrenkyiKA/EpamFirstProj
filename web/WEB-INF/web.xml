<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <welcome-file-list>
        <welcome-file>welcomePage.jsp</welcome-file>
    </welcome-file-list>

    <!-- welcome servlet -->
    <servlet>
        <servlet-name>welcomePage</servlet-name>
        <servlet-class>com.epam.app.controller.WelcomePageController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>welcomePage</servlet-name>
        <url-pattern>/welcome</url-pattern>
    </servlet-mapping>

    <!-- home servlet -->
    <servlet>
        <servlet-name>homePage</servlet-name>
        <servlet-class>com.epam.app.controller.HomePageController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>homePage</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>

    <!--addUser servlet-->
    <servlet>
        <servlet-name>addUser</servlet-name>
        <servlet-class>com.epam.app.controller.AddUserController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>addUser</servlet-name>
        <url-pattern>/addUser</url-pattern>
    </servlet-mapping>

    <!--addBook servlet-->
    <servlet>
        <servlet-name>addBook</servlet-name>
        <servlet-class>com.epam.app.controller.AddBookController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>addBook</servlet-name>
        <url-pattern>/addBook</url-pattern>
    </servlet-mapping>

    <!-- bookList servlet -->
    <servlet>
        <servlet-name>bookList</servlet-name>
        <servlet-class>com.epam.app.controller.BookListController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>bookList</servlet-name>
        <url-pattern>/bookList</url-pattern>
    </servlet-mapping>

    <!-- loginEnter to enter login to search all cards of user -->
    <servlet>
        <servlet-name>loginEnter</servlet-name>
        <servlet-class>com.epam.app.controller.LoginEnterController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>loginEnter</servlet-name>
        <url-pattern>/loginEnter</url-pattern>
    </servlet-mapping>

    <!-- userCards servlet -->
    <servlet>
        <servlet-name>cards</servlet-name>
        <servlet-class>com.epam.app.controller.UserCardController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>cards</servlet-name>
        <url-pattern>/cards</url-pattern>
    </servlet-mapping>

    <!-- user cards servlet -->
    <servlet>
        <servlet-name>dateChange</servlet-name>
        <servlet-class>com.epam.app.controller.DateCardConroller</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>dateChange</servlet-name>
        <url-pattern>/dateChange</url-pattern>
    </servlet-mapping>

    <!-- userList servlet -->
    <servlet>
        <servlet-name>userList</servlet-name>
        <servlet-class>com.epam.app.controller.UserListController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>userList</servlet-name>
        <url-pattern>/userList</url-pattern>
    </servlet-mapping>

    <!--register user servlet-->
    <servlet>
        <servlet-name>register</servlet-name>
        <servlet-class>com.epam.app.controller.RegisterUserController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>

    <!--login user servlet-->
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.epam.app.controller.AuthorizationUserController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>loginFilter</filter-name>
        <filter-class>com.epam.app.filter.SecurityFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>loginFilter</filter-name>
        <url-pattern>/view/*</url-pattern>
    </filter-mapping>

    <!-- logout user servlet -->
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>com.epam.app.controller.LogoutController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

</web-app>